<%- include('header'); -%>

    <div class="box" id="heading">
      <h1><%= listTitle %></h1>
    </div>
    <div class="box">

      <% foundItems.forEach(item => { %>
        
        <div class="item">
          <input type="checkbox" />
          <p><%= item.name %></p>
        </div>
        <% }); %>

      
      <form action="/" method="POST" class="item">
        <input
          type="text"
          name="newItem"
          placeholder="New Item"
          autocomplete="off"
        />
        <button type="submit" name="list" value="<%= listTitle %>">+</button>
      </form>
    </div>
  </body>

  <%- include('footer'); -%>